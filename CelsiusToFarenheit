/*
 * CelsiusToFarenheit.java
 * -----------------------------------
 * This program converts Celsius
 * into Farenheit.
 */

import java.util.Scanner;

public class CelsiusToFarenheit {

	public static void main(String[] args) {
		
		double celsius;
		double farenheit;
		
		System.out.println("This program converts Celsius temperature into Farenheit.\n");
		
		Scanner in = new Scanner(System.in);
		
		System.out.print("Temperature in Celsius: ");
		celsius = in.nextDouble();
		
		/*Convert Celsius into Farenheit.*/
		farenheit = celsius * (9.0/5.0) + 32; //Be sure to use the division in double.
		
		System.out.printf("%.1f C = %.1f F", celsius, farenheit);
				
	}
}
